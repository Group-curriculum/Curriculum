<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow backup of user preferences and settings -->
        <include domain="sharedpref" path="user_preferences.xml"/>
        <include domain="sharedpref" path="app_settings.xml"/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="firebase_auth_prefs.xml"/>
        <exclude domain="database" path="studyhub_database"/>
        <exclude domain="file" path="offline_content/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow transfer of user preferences -->
        <include domain="sharedpref" path="user_preferences.xml"/>
        <include domain="sharedpref" path="app_settings.xml"/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="firebase_auth_prefs.xml"/>
        <exclude domain="database" path="studyhub_database"/>
        <exclude domain="file" path="offline_content/"/>
    </device-transfer>
</data-extraction-rules>