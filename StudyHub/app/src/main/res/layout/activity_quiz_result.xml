<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/Widget.StudyHub.Toolbar"
        app:title="@string/quiz_result" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Result Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.StudyHub.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Pass/Fail Icon -->
                    <ImageView
                        android:id="@+id/ivResultIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:contentDescription="Result icon" />

                    <!-- Pass/Fail Text -->
                    <TextView
                        android:id="@+id/tvResultStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        tools:text="Passed!" />

                    <!-- Score -->
                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        tools:text="85%" />

                    <!-- Correct Answers -->
                    <TextView
                        android:id="@+id/tvCorrectAnswers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        tools:text="17/20 Correct" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Performance Message -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.StudyHub.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        tools:text="Great job! You have a strong understanding of this topic." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewSolutions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/view_solutions"
                style="@style/Widget.StudyHub.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetakeQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/retake_quiz"
                style="@style/Widget.StudyHub.Button.Outlined" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finish"
                style="@style/Widget.StudyHub.Button.Outlined" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
